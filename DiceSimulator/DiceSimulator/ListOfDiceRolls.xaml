<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceSimulator.ListOfDiceRolls">
  <StackLayout Orientation="Vertical">
    <ListView x:Name="ListViewOfDiceRolls">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">

                <Label Text="{Binding NumberRolled}"></Label>
                <Label Text="{Binding TimeRollWasPerformed}"></Label>
              </StackLayout>

          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    
  </StackLayout>
</ContentPage>